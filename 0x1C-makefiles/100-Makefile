NAME = school
SRC = $(wildcard *.c)
OBJ = $(SRC:.c=.o)
CC = gcc
RM = /bin/rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic
DEPS = m.h

.PHONY: all clean oclean fclean re

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $@

clean:
	$(RM) $(filter-out $(DEPS), $(wildcard *~ *.o $(NAME)))

oclean:
	$(RM) $(OBJ)

fclean: clean
	$(RM) $(NAME)

re: fclean all

%.o: %.c $(DEPS)
	$(CC) $(CFLAGS) -c $< -o $@
